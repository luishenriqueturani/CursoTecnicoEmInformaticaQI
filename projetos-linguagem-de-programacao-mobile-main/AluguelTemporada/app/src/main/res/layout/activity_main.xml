<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data de Entrada"
            />

        <CalendarView
            android:id="@+id/cv_Entrada"
            android:layout_width="335dp"
            android:layout_height="307dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp">

        </CalendarView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data de Saida"
            />
        <CalendarView
            android:id="@+id/cv_saida"
            android:layout_width="335dp"
            android:layout_height="307dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp">

        </CalendarView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de apartamento:"
            />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sp_Quartos"
            android:entries="@array/quarto">
        </Spinner>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DiÃ¡ria"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:id="@+id/bt_Enviar"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultados"
            android:id="@+id/tv_Resultados"/>



    </LinearLayout>
</ScrollView>